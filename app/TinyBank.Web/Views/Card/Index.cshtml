@model TinyBank.Core.Model.Card

@{
    ViewData["Title"] = "Chaeckout Page";
}

<div class="text-center js-checkout-result">
    <h1 class="display-4">Welcome to the checkout page!</h1>
</div>

<div class="js-checkout-form">
    <form>
        <div class="form-group">
            <label>Card Number</label>
            <input type="text" class="form-control col-sm-2" id="js-checkout-card-id">
        </div>

        <div class="form-group">
            <label>Expiry Month</label>
            <select class="form-control col-sm-1" id="js-checkout-expiry-month">
                <option>01</option>
                <option>02</option>
                <option>03</option>
                <option>04</option>
                <option>05</option>
                <option>06</option>
                <option>07</option>
                <option>08</option>
                <option>09</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
            </select>
        </div>

        <div class="form-group">
            <label>Expiry Year</label>
            <select class="form-control col-sm-1" id="js-checkout-expiry-year">
                <option>2021</option>
                <option>2022</option>
                <option>2023</option>
                <option>2024</option>
                <option>2025</option>
                <option>2026</option>
                <option>2027</option>
            </select>
        </div>

        <div class="form-group">
            <label>Amount</label>
            <input type="number" min="0" step="0.01" class="form-control col-sm-1" id="js-checkout-amount">
        </div>
    </form>

    @*<div class="js-checkout-result">
    </div>*@

    <div class="text-center">
        <button type="button" class="btn btn-primary js-checkout">
            Checkout
        </button>
    </div>
</div>